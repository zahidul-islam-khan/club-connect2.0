    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 224.3 76.3% 94.1%;
/* Removed duplicate body selector, merged styles above */
  color: var(--foreground);
  font-family: Arial, Helvetica, sans-serif;
 }
}
/* Mobile-first responsive utilities */
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Ensure cards work well on mobile */
@media (max-width: 640px) {
  .container {
    padding-left: 1rem;
    padding-right: 1rem;
  }
}

/* Fix for mobile viewport issues */
@media (max-width: 768px) {
  body {
    overflow-x: hidden;
  }
  
  .mobile-scroll-safe {
    max-width: 100vw;
    overflow-x: auto;
  }
}

/* Improve touch targets on mobile */
@media (max-width: 768px) {
  button {
    min-height: 44px;
    min-width: 44px;
  }
  
  .touch-target {
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
}

/* Concert-style background and animations */
.concert-bg {
  position: relative;
  overflow: hidden;
}

.concert-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 10%, rgba(255, 100, 255, 0.1) 0%, transparent 30%),
    radial-gradient(circle at 80% 10%, rgba(100, 255, 255, 0.1) 0%, transparent 30%),
    radial-gradient(circle at 40% 20%, rgba(255, 255, 100, 0.05) 0%, transparent 40%),
    radial-gradient(circle at 60% 20%, rgba(255, 150, 100, 0.05) 0%, transparent 40%);
  animation: stageLights 4s ease-in-out infinite alternate;
  pointer-events: none;
  z-index: 1;
}

@keyframes stageLights {
  0% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.05);
  }
  100% {
    opacity: 0.4;
    transform: scale(0.95);
  }
}

/* Enhance club cards with subtle glow */
.concert-bg .hover\:shadow-lg:hover {
  box-shadow: 
    0 20px 25px -5px rgba(0, 0, 0, 0.1), 
    0 10px 10px -5px rgba(0, 0, 0, 0.04),
    0 0 20px rgba(139, 69, 19, 0.1);
  transform: translateY(-2px);
  transition: all 0.3s ease;
}

/* Stage spotlight effect on hover */
.concert-bg .hover\:shadow-lg:hover::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 60%);
  pointer-events: none;
  z-index: -1;
}

/* BRACU Campus Background with Blur */
.bracu-bg {
  position: relative;
  min-height: 100vh;
}

.bracu-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('/images/bracu-campus.jpg');
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  filter: blur(2px);
  transform: scale(1.02);
  z-index: -2;
}

.bracu-bg::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: -1;
} 